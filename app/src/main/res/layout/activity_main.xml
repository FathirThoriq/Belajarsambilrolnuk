<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:fitsSystemWindows="true"
    android:background="#121212">

    <!-- Tab Navigasi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="#1F1F1F"
        android:padding="4dp"
        android:layout_marginBottom="16dp"
        android:clipToOutline="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tab1"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Data Diri"
            android:textColor="@android:color/white"
            app:backgroundTint="#3F51B5"
            android:layout_margin="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tab2"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Jadwal"
            android:textColor="#E0E0E0"
            app:backgroundTint="#1F1F1F"
            android:layout_margin="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tab3"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Info Matkul"
            android:textColor="#E0E0E0"
            app:backgroundTint="#1F1F1F"
            android:layout_margin="2dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/tab_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Tab Data Diri -->
        <LinearLayout
            android:id="@+id/home_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama : MOHAMMAD YASSIR THORIQ"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIM : E41240985"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prodi : Teknik Informatika"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jurusan : Teknologi Informasi"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp" />

        </LinearLayout>

        <!-- Tab Jadwal -->
        <ScrollView
            android:id="@+id/profile_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senin"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#BB86FC"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00 - 09:40 - Pemrograman Mobile (Lab 2)\n09:40 - 11:00 - Basis Data (Lab 2)"
                    android:textSize="16sp"
                    android:textColor="#E0E0E0"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selasa"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#03DAC5"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00 - 09:40 - Algoritma Pemrograman (Lab 1)\n09:40 - 11:00 - Jaringan Komputer (Lab 3)"
                    android:textSize="16sp"
                    android:textColor="#E0E0E0"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>
        </ScrollView>

        <!-- Tab Info Matkul -->
        <ScrollView
            android:id="@+id/settings_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pemrograman Mobile"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#FFEB3B"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mata Kuliah: Pemrograman Mobile\nJadwal: Senin, 08:00 â€“ 09:40 (Lab 2)\n\nðŸ“Œ Belajar membuat aplikasi Android dengan Java/Kotlin di Android Studio, meliputi UI, database lokal, dan integrasi layanan.\n\nðŸ‘‰ Capaian: Mahasiswa mampu merancang dan membangun aplikasi mobile sederhana."
                    android:textSize="16sp"
                    android:textColor="#E0E0E0"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>
